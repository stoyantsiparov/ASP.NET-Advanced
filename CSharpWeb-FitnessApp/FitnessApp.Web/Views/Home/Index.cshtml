@{
    ViewData["Title"] = "Home Page";
    ViewData["Message"] = "Welcome to the Fitness Web App!";
}

<body class="home-page">
    <div class="container text-center py-5">
        <h2>@ViewData["Title"]</h2>
        <h3>@ViewData["Message"]</h3>

        <!-- Основно съобщение и описание -->
        <p class="lead">Explore our list of fitness and spa services.</p>
        <p class="lead">Add fitness classes to attend and book spa sessions.</p>

        <!-- Основен бутон с по-голям размер -->
        <div class="d-flex justify-content-center mb-5">
            <a asp-controller="MembershipType" asp-action="Details" class="btn btn-success btn-lg w-100">View Details</a>
        </div>

        <!-- Секция с карти (например, услуги, класове) -->
        <div class="row mt-5">
            <div class="col-md-4">
                <div class="card">
                    <img src="https://m.media-amazon.com/images/I/51Cg14ozwBL._AC_UF894,1000_QL80_.jpg" class="card-img-top img-fluid" alt="Card image">
                    <div class="card-body">
                        <h5 class="card-title">Fitness Classes</h5>
                        <p class="card-text">Join a fitness class that fits your schedule and goals.</p>
                        <a asp-controller="Class" asp-action="Details" class="btn btn-success btn-lg w-100">View Details</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://thebeautyisland.co.uk/wp-content/uploads/2021/03/The-Beauty-Island-spa-treatments-18-1.jpg" class="card-img-top img-fluid" alt="Card image">
                    <div class="card-body">
                        <h5 class="card-title">Spa Services</h5>
                        <p class="card-text">Relax and unwind with our premium spa treatments.</p>
                        <a asp-controller="SpaProcedure" asp-action="Details" class="btn btn-success btn-lg w-100">View Details</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <img src="https://png.pngtree.com/thumb_back/fh260/background/20190223/ourmid/pngtree-color-tennis-sport-advertising-background-backgroundmotionwork-outtennistreeshand-paintedfreshhouses-image_75815.jpg" class="card-img-top img-fluid" alt="Card image">
                    <div class="card-body">
                        <h5 class="card-title">Fitness Events</h5>
                        <p class="card-text">Join a fitness event and explore the beautiful nature.</p>
                        <a asp-controller="FitnessEvent" asp-action="Details" class="btn btn-success btn-lg w-100">View Details</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Carousel -->
        <div id="carouselExample" class="carousel slide mt-5" data-bs-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://via.placeholder.com/800x400" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Welcome to Our Fitness Hub</h5>
                        <p>Your journey to fitness starts here.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="https://via.placeholder.com/800x400" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Exclusive Spa Treatments</h5>
                        <p>Relax and rejuvenate with our spa services.</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img src="https://via.placeholder.com/800x400" class="d-block w-100" alt="...">
                    <div class="carousel-caption d-none d-md-block">
                        <h5>Personalized Training</h5>
                        <p>Work with trainers who know how to push you.</p>
                    </div>
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

        <!-- Препоръки или отзиви -->
        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <p><strong>"This is the best fitness app I've used. It helped me stay healthy and fit!"</strong></p>
                        <p><span class="stars">⭐⭐⭐⭐⭐</span></p>
                        <footer>- Jane Doe, <cite title="Source Title">Fitness Enthusiast</cite></footer>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <p><strong>"The trainers are fantastic! I've achieved more in a few months here than I ever thought possible."</strong></p>
                        <p><span class="stars">⭐⭐⭐⭐⭐</span></p>
                        <footer>- John Smith, <cite title="Source Title">Loyal Member</cite></footer>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <p><strong>"I love the variety of classes and the spa treatments. Best fitness experience ever!"</strong></p>
                        <p><span class="stars">⭐⭐⭐⭐⭐</span></p>
                        <footer>- Sarah Lee, <cite title="Source Title">Regular Visitor</cite></footer>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>