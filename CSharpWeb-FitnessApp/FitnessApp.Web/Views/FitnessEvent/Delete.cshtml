@model FitnessApp.Web.ViewModels.FitnessEventViewModels.DeleteFitnessEventViewModel

@{
	ViewData["Title"] = "Delete Fitness Event";
}

<h2 class="text-center">@ViewData["Title"]</h2>
<hr />

<div class="row justify-content-center">
	<div class="col-md-6">
		<div class="card">
			<div class="card-body">
				<h3 class="card-title text-center">@Model.Title</h3>
				<p class="mb-0"><strong>Location:</strong> @Model.Location</p>
				<p class="text-muted mt-2"><strong>Description:</strong> @Model.Description</p>
				<p><strong>Start Date and Time:</strong> @Model.StartDateTime</p>
				<p><strong>End Date and Time:</strong> @Model.EndDateTime</p>
				<p class="text-danger mt-3">Are you sure you want to delete this event?</p>
			</div>
			<div class="card-footer">
				<form asp-action="Delete" method="post">
					<input type="hidden" asp-for="Id" />
					<input type="hidden" asp-for="Title" />
					<input type="hidden" asp-for="ImageUrl" />
					<input type="hidden" asp-for="Location" />
					<input type="hidden" asp-for="Description" />
					<input type="hidden" asp-for="StartDateTime" />
					<input type="hidden" asp-for="EndDateTime" />
					<button type="submit" class="btn btn-danger w-100">Confirm Delete</button>
					<a asp-controller="FitnessEvent" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-warning w-100">Cancel</a>
				</form>
			</div>
		</div>
	</div>
</div>