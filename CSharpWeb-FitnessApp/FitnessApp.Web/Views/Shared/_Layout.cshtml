@using static FitnessApp.Common.ApplicationsConstants
@{
	int currentYear = DateTime.UtcNow.Year;
	string footerNote = (ReleaseYear == currentYear) ?
		$"{ReleaseYear}" : $"{ReleaseYear} - {currentYear}";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"]</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/FitnessApp.Web.styles.css" asp-append-version="true" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FitnessWebApp</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>

						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle text-dark" id="buyMembershipDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Become a member
							</a>
							<ul class="dropdown-menu" aria-labelledby="buyApplicationUsershipDropdown">
								<li><a class="dropdown-item" asp-controller="MembershipType" asp-action="Index">Prices</a></li>
								<li><a class="dropdown-item" asp-controller="MembershipType" asp-action="MyMembershipType">My Membership</a></li>
							</ul>
						</li>

						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle text-dark" id="servicesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Services
							</a>
							<ul class="dropdown-menu" aria-labelledby="servicesDropdown">
								<li><a class="dropdown-item" asp-controller="SpaProcedure" asp-action="Index">Spa Procedures</a></li>
								<li><a class="dropdown-item" asp-controller="FitnessEvent" asp-action="Index">Fitness Events</a></li>
								<li><a class="dropdown-item" asp-controller="Class" asp-action="Index">Fitness Classes</a></li>
							</ul>
						</li>

						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle text-dark" id="appointmentsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
								Appointments
							</a>
							<ul class="dropdown-menu" aria-labelledby="appointmentsDropdown">
								<li><a class="dropdown-item" asp-controller="SpaProcedure" asp-action="MySpaAppointments">My Spa Appointments</a></li>
								<li><a class="dropdown-item" asp-controller="FitnessEvent" asp-action="MyFitnessEvents">My Fitness Appointments</a></li>
								<li><a class="dropdown-item" asp-controller="Class" asp-action="MyClasses">My Class Appointments</a></li>
							</ul>
						</li>

						<li class="nav-item ms-left">
							<a class="nav-link text-dark" asp-controller="Instructor" asp-action="Index">Our Instructors</a>
						</li>

						<li class="nav-item dropdown ms-auto">
							@if (User.IsInRole(AdminRole))
							{
								<a class="nav-link dropdown-toggle text-dark" id="addClassDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
									Admin Menu
								</a>
								<ul class="dropdown-menu" aria-labelledby="addClassDropdown">
									<li><a class="dropdown-item" asp-controller="Instructor" asp-action="Add">Add New Instructor</a></li>
									<li><a class="dropdown-item" asp-controller="MembershipType" asp-action="Add">Create New Membership Type</a></li>
									<li><a class="dropdown-item" asp-controller="Class" asp-action="Add">Create New Class</a></li>
									<li><a class="dropdown-item" asp-controller="FitnessEvent" asp-action="Add">Create New Fitness Event</a></li>
									<li><a class="dropdown-item" asp-controller="SpaProcedure" asp-action="Add">Create New Spa Procedure</a></li>
								</ul>
							}
						</li>
					</ul>
					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>
	</header>

	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; @footerNote - FitnessWebApp
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>