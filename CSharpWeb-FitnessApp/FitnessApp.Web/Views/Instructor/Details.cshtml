@model FitnessApp.Web.ViewModels.InstructorViewModels.InstructorDetailsViewModel
@using static FitnessApp.Common.ApplicationsConstants

@{
	ViewData["Title"] = "Instructor Details";
}

<h2>@Model.FirstName @Model.LastName</h2>
<hr />

<div class="row justify-content-center" style="margin: 0 auto; max-width: 800px;">
	<div class="col-md-4 text-center">
		@if (!string.IsNullOrEmpty(Model.ImageUrl))
		{
			<img src="@Model.ImageUrl" class="img-fluid" style="max-width: 100%; height: auto;" alt="@Model.FirstName @Model.LastName" />
		}
		else
		{
			<img src="~/img/no-image-available-02.jpg" class="img-fluid" style="max-width: 100%; height: auto;" alt="No Image Available" />
		}
	</div>

	<div class="col-md-8">
		<div class="card-body">
			<h5 class="card-title">@Model.FirstName @Model.LastName</h5>
			<hr />
			<p><strong>Bio:</strong> @Model.Bio</p>
			<p><strong>Specialization:</strong> @Model.Specialization</p>

			@if (TempData["ErrorMessage"] != null)
			{
				<div class="alert alert-danger" role="alert">
					@TempData["ErrorMessage"]
				</div>
			}

			<a asp-controller="Instructor" asp-action="Index" class="btn btn-success mt-2 w-100" style="border: none;">Back</a>

			@if (User.IsInRole(AdminRole))
			{
				<hr />

				<!-- Buttons for Edit and Delete -->
				<div class="d-flex justify-content-between">
					<a asp-controller="Instructor" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning w-100">Edit</a>
					<a asp-controller="Instructor" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger w-100">Delete</a>
				</div>

				<hr />
			}

		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}